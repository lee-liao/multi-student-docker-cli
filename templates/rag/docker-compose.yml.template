version: '3.8'

services:
  {{#if_no_common_project}}
  # Infrastructure services (only if no common project exists)
  postgres-rag:
    image: pgvector/pgvector:pg15
    container_name: {{USERNAME}}-rag-postgres
    ports:
      - "{{POSTGRES_PORT}}:5432"
    environment:
      - POSTGRES_DB=rag_chatbot
      - POSTGRES_USER={{USERNAME}}_user
      - POSTGRES_PASSWORD={{USERNAME}}_password_2024
      - POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
    volumes:
      - postgres_rag_data:/var/lib/postgresql/data
      - ./database/init.sql:/docker-entrypoint-initdb.d/01-init.sql
    networks:
      - {{USERNAME}}-rag-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{USERNAME}}_user -d rag_chatbot"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'

  chromadb:
    image: chromadb/chroma:latest
    container_name: {{USERNAME}}-rag-chromadb
    ports:
      - "{{CHROMADB_PORT}}:8000"
    environment:
      - CHROMA_SERVER_HOST=0.0.0.0
      - CHROMA_SERVER_HTTP_PORT=8000
      - PERSIST_DIRECTORY=/chroma/data
      - ANONYMIZED_TELEMETRY=False
    volumes:
      - chromadb_data:/chroma/data
    networks:
      - {{USERNAME}}-rag-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/api/v2/heartbeat"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.25'

  redis-rag:
    image: redis:7-alpine
    container_name: {{USERNAME}}-rag-redis
    ports:
      - "{{REDIS_PORT}}:6379"
    command: redis-server --appendonly yes --requirepass {{USERNAME}}_redis_2024
    volumes:
      - redis_rag_data:/data
    networks:
      - {{USERNAME}}-rag-network
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 128M
          cpus: '0.25'
  {{/if_no_common_project}}

  # Application services (always included)
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: {{USERNAME}}-rag-backend
    ports:
      - "{{BACKEND_PORT}}:8000"
    environment:
      {{#if_common_project}}
      - DATABASE_URL=postgresql+asyncpg://{{USERNAME}}_user:{{USERNAME}}_password_2024@{{USERNAME}}-postgres:5432/rag_chatbot
      - CHROMADB_HOST={{USERNAME}}-chromadb
      - CHROMADB_PORT=8000
      - REDIS_URL=redis://{{USERNAME}}_redis_2024@{{USERNAME}}-redis:6379/0
      {{else}}
      - DATABASE_URL=postgresql+asyncpg://{{USERNAME}}_user:{{USERNAME}}_password_2024@{{USERNAME}}-rag-postgres:5432/rag_chatbot
      - CHROMADB_HOST={{USERNAME}}-rag-chromadb
      - CHROMADB_PORT=8000
      - REDIS_URL=redis://{{USERNAME}}_redis_2024@{{USERNAME}}-rag-redis:6379/0
      {{/if_common_project}}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - ENVIRONMENT=development
      - LOG_LEVEL=INFO
      - CORS_ORIGINS={{CORS_ORIGINS_FULL}}
      - MAX_FILE_SIZE=50MB
      - CHUNK_SIZE=1000
      - CHUNK_OVERLAP=200
    volumes:
      - ./backend:/app
      - uploaded_files:/app/uploads
    networks:
      {{#if_common_project}}
      - {{USERNAME}}-network
      {{else}}
      - {{USERNAME}}-rag-network
      {{/if_common_project}}
    depends_on:
      {{#if_common_project}}
      - postgres
      - chromadb
      - redis
      {{else}}
      - postgres-rag
      - chromadb
      - redis-rag
      {{/if_common_project}}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
      target: development
    container_name: {{USERNAME}}-rag-frontend
    ports:
      - "{{FRONTEND_PORT}}:3000"
    environment:
      - NEXT_PUBLIC_API_BASE_URL=http://localhost:{{BACKEND_PORT}}
      - NODE_ENV=development
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
    volumes:
      - ./frontend:/app
      - /app/node_modules
      - /app/.next
    networks:
      {{#if_common_project}}
      - {{USERNAME}}-network
      {{else}}
      - {{USERNAME}}-rag-network
      {{/if_common_project}}
    depends_on:
      - backend
    restart: unless-stopped
    deploy:
      resources:
        limits:
          memory: 512M
          cpus: '0.5'
        reservations:
          memory: 256M
          cpus: '0.25'

networks:
  {{#if_common_project}}
  {{USERNAME}}-network:
    external: true
  {{else}}
  {{USERNAME}}-rag-network:
    name: {{USERNAME}}-rag-network
  {{/if_common_project}}

volumes:
  {{#if_no_common_project}}
  postgres_rag_data:
    name: {{USERNAME}}-rag-postgres-data
  chromadb_data:
    name: {{USERNAME}}-rag-chromadb-data
  redis_rag_data:
    name: {{USERNAME}}-rag-redis-data
  {{/if_no_common_project}}
  uploaded_files:
    name: {{USERNAME}}-rag-uploaded-files